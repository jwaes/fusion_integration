<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_fusion" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fusion</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">
                <h2>Fusion 360 Integration</h2>
                <div class="row mt16 o_settings_container" name="fusion_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Default Product Folder</span>
                            <div class="text-muted">
                                Default location for newly created products from Fusion 360
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="fusion_default_folder_id" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
